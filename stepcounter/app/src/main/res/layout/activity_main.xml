<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:textSize="75dp"
        android:text="-"
        android:id="@+id/stepsTakenTextView"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.androidplot.xy.XYPlot
        android:id="@+id/accelerometerXYPlot_Z"
        android:layout_width="fill_parent"
        android:layout_height="225dp"
        androidPlot.title=""
        androidPlot.domainLabel=""
        androidPlot.rangeLabel="Z accelerometer"
        androidPlot.titleWidget.labelPaint.textSize="@dimen/title_font_size"
        androidPlot.domainLabelWidget.labelPaint.textSize="@dimen/domain_label_font_size"
        androidPlot.rangeLabelWidget.labelPaint.textSize="@dimen/range_label_font_size"
        androidPlot.graphWidget.marginTop="@dimen/marginTop"
        androidPlot.graphWidget.marginLeft="@dimen/marginLeft"
        androidPlot.graphWidget.marginBottom="@dimen/marginBottom"
        androidPlot.graphWidget.marginRight="@dimen/marginRight"
        androidPlot.graphWidget.rangeLabelPaint.textSize="@dimen/range_tick_label_font_size"
        androidPlot.graphWidget.rangeOriginLabelPaint.textSize="@dimen/range_tick_label_font_size"
        androidPlot.graphWidget.domainLabelPaint.textSize="@dimen/domain_tick_label_font_size"
        androidPlot.graphWidget.domainOriginLabelPaint.textSize="@dimen/domain_tick_label_font_size"
        androidPlot.legendWidget.textPaint.textSize="@dimen/legend_text_font_size"
        androidPlot.legendWidget.iconSizeMetrics.heightMetric.value="15dp"
        androidPlot.legendWidget.iconSizeMetrics.widthMetric.value="15dp"
        androidPlot.legendWidget.heightMetric.value="25dp"
        androidPlot.legendWidget.positionMetrics.anchor="right_bottom"
        androidPlot.graphWidget.gridLinePaint.color="#000000"
        android:layout_below="@+id/stepsTakenTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <com.androidplot.xy.XYPlot
        android:id="@+id/accelerometerXYPlot_X"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        androidPlot.title=""
        androidPlot.domainLabel=""
        androidPlot.rangeLabel="X accelerometer"
        androidPlot.titleWidget.labelPaint.textSize="@dimen/title_font_size"
        androidPlot.domainLabelWidget.labelPaint.textSize="@dimen/domain_label_font_size"
        androidPlot.rangeLabelWidget.labelPaint.textSize="@dimen/range_label_font_size"
        androidPlot.graphWidget.marginTop="@dimen/marginTop"
        androidPlot.graphWidget.marginLeft="@dimen/marginLeft"
        androidPlot.graphWidget.marginBottom="@dimen/marginBottom"
        androidPlot.graphWidget.marginRight="@dimen/marginRight"
        androidPlot.graphWidget.rangeLabelPaint.textSize="@dimen/range_tick_label_font_size"
        androidPlot.graphWidget.rangeOriginLabelPaint.textSize="@dimen/range_tick_label_font_size"
        androidPlot.graphWidget.domainLabelPaint.textSize="@dimen/domain_tick_label_font_size"
        androidPlot.graphWidget.domainOriginLabelPaint.textSize="@dimen/domain_tick_label_font_size"
        androidPlot.legendWidget.textPaint.textSize="@dimen/legend_text_font_size"
        androidPlot.legendWidget.iconSizeMetrics.heightMetric.value="15dp"
        androidPlot.legendWidget.iconSizeMetrics.widthMetric.value="15dp"
        androidPlot.legendWidget.heightMetric.value="25dp"
        androidPlot.legendWidget.positionMetrics.anchor="right_bottom"
        androidPlot.graphWidget.gridLinePaint.color="#000000"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/accelerometerXYPlot_Y"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@id/accelerometerXYPlot_Y" />

    <com.androidplot.xy.XYPlot
        android:id="@+id/accelerometerXYPlot_Y"
        android:layout_width="fill_parent"
        android:layout_height="225dp"
        androidPlot.title=""
        androidPlot.domainLabel=""
        androidPlot.rangeLabel="Y accelerometer"
        androidPlot.titleWidget.labelPaint.textSize="@dimen/title_font_size"
        androidPlot.domainLabelWidget.labelPaint.textSize="@dimen/domain_label_font_size"
        androidPlot.rangeLabelWidget.labelPaint.textSize="@dimen/range_label_font_size"
        androidPlot.graphWidget.marginTop="@dimen/marginTop"
        androidPlot.graphWidget.marginLeft="@dimen/marginLeft"
        androidPlot.graphWidget.marginBottom="@dimen/marginBottom"
        androidPlot.graphWidget.marginRight="@dimen/marginRight"
        androidPlot.graphWidget.rangeLabelPaint.textSize="@dimen/range_tick_label_font_size"
        androidPlot.graphWidget.rangeOriginLabelPaint.textSize="@dimen/range_tick_label_font_size"
        androidPlot.graphWidget.domainLabelPaint.textSize="@dimen/domain_tick_label_font_size"
        androidPlot.graphWidget.domainOriginLabelPaint.textSize="@dimen/domain_tick_label_font_size"
        androidPlot.legendWidget.textPaint.textSize="@dimen/legend_text_font_size"
        androidPlot.legendWidget.iconSizeMetrics.heightMetric.value="15dp"
        androidPlot.legendWidget.iconSizeMetrics.widthMetric.value="15dp"
        androidPlot.legendWidget.heightMetric.value="25dp"
        androidPlot.legendWidget.positionMetrics.anchor="right_bottom"
        androidPlot.graphWidget.gridLinePaint.color="#000000"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/accelerometerXYPlot_Z"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignStart="@id/accelerometerXYPlot_Z" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/textViewSettings"
        android:layout_alignTop="@+id/stepsTakenTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/accelerometerXYPlot_Z"
        android:layout_toLeftOf="@+id/stepsTakenTextView"
        android:layout_toStartOf="@+id/stepsTakenTextView" />

</RelativeLayout>
